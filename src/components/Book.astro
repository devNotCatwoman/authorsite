---
interface Props {
	title: string;
	cw: string;
	desc: string;
    image: string;
}

const { desc, title, cw , image } = Astro.props;

---

    <!-- Card Section -->
    <div class="bg-[#1e1c1a] text-white shadow-lg rounded-lg max-w-5xl mx-auto flex">
        <!-- Book Image -->
        <img src={image} alt="Book Image" class="p-10 w-64 rounded-l-lg">
  
        <!-- Book Info -->
        <div class="p-6 text-left">
          <!-- Title -->
          <h2 class="text-2xl font-bold mb-2">{title}</h2>
  
          <!-- Description -->
          <p class="mb-10">
            {desc}
          </p>
          <h2 class="">CW/TW</h2>
          <p class="">
            {cw}
          </p>
  
          <!-- Button -->
          <button class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition duration-300 mt-4">
            Buy
          </button>
        </div>
      </div>
  
  