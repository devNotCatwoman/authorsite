---
import type { ZodStringCheck } from "astro:schema";

interface Props {
  title: string;
  cw: string;
  desc: string;
  image: string;
  link: string;
  buy: string;
  release: string;
}

const { desc, title, cw, image, link, buy, release } = Astro.props;
---

<!-- Card Section -->
<div
  id="about"
  class="bg-gradient-to-r from-gray-600 to-gray-800 p-1 rounded-sm"
>
  <div
    id="books"
    class="shadow-lg mx-auto text-white grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl justify-center p-5 bg-[#0f0e0d] rounded-lg"
  >
    <!-- Photo Section -->
    <div class="flex flex-col items-center lg:items-center">
      <!-- Book Image -->
      <img
        src={image}
        alt="Book Cover"
        class="border-2 border-gray-700 mt-5 w-64 rounded-sm shadow-md"
      />
      <h2 class="mt-8 italic">{release}</h2>
      <!-- Centered Button Section -->
      <div class="mt-8 flex justify-center w-full">
        <a href={link}
          ><button
            class="bg-[#40AD8E] hover:bg-[#308069] text-white font-bold py-2 px-6 rounded-lg shadow-md transition duration-300"
          >
            {buy}
          </button></a
        >
      </div>
    </div>

    <!-- Text Section -->
    <div class="flex flex-col text-left lg:pl-10">
      <h2 class="text-3xl font-bold mb-4 font-[Roboto]">{title}</h2>
      <p class="text-lg leading-relaxed mb-6">
        {desc}
      </p>

      <!-- CW/TW Section -->
      <h3 class="text-2xl font-bold mb-4 font-[Roboto]">CW/TW</h3>
      <p class="text-lg leading-relaxed">
        {cw}
      </p>
    </div>
  </div>
</div>
